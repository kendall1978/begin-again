    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "mini-css-extract-plugin": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "tailwindcss": "^2.0.2",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "cssnano": "^5.1.4",
    "rimraf": "^3.0.2"
  }
